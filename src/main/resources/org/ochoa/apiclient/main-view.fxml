<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.geometry.VPos?>

<HBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.ochoa.apiclient.ui.controllers.Controller"
      alignment="CENTER"
      spacing="20"
      style="-fx-padding: 20;">

    <!-- COLUMNA IZQUIERDA - 40% -->
    <GridPane hgap="10" vgap="15"
              HBox.hgrow="ALWAYS"
              alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints percentWidth="100" halignment="CENTER"/>
        </columnConstraints>

        <rowConstraints>
            <RowConstraints valignment="CENTER"/>
            <RowConstraints valignment="CENTER"/>
            <RowConstraints valignment="CENTER"/>
            <RowConstraints valignment="CENTER"/>
            <RowConstraints valignment="CENTER"/>
            <RowConstraints valignment="CENTER"/>
        </rowConstraints>

        <Label text="Buscador PokÃ©mon"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"
               GridPane.columnIndex="0"
               GridPane.rowIndex="0"
               GridPane.halignment="CENTER"/>

        <ImageView fitWidth="200"
                   fitHeight="200"
                   preserveRatio="true"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="1"
                   GridPane.halignment="CENTER">
            <Image url="@images/pokeapi_256.png"/>
        </ImageView>

        <Label text="Nombre:"
               GridPane.columnIndex="0"
               GridPane.rowIndex="2"
               GridPane.halignment="CENTER"/>

        <TextField fx:id="searchField"
                   promptText="Ej: Pikachu"
                   prefWidth="200"
                   maxWidth="200"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="3"
                   GridPane.halignment="CENTER"/>

        <Button text="Buscar" onAction="#onSearchButtonClick"
                GridPane.columnIndex="0"
                GridPane.rowIndex="4"
                GridPane.halignment="CENTER"
                style="-fx-padding: 8px 20px;"/>

        <Label fx:id="errorLabel"
               style="-fx-text-fill: red; -fx-font-weight: bold;"
               GridPane.columnIndex="0"
               GridPane.rowIndex="5"
               GridPane.halignment="CENTER"/>
    </GridPane>

    <!-- COLUMNA DERECHA - 60% -->
    <GridPane hgap="10" vgap="15"
              HBox.hgrow="ALWAYS"
              alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints percentWidth="100" halignment="CENTER"/>
        </columnConstraints>

        <rowConstraints>
            <RowConstraints valignment="CENTER"/>
            <RowConstraints valignment="CENTER"/>
            <RowConstraints valignment="CENTER"/>
        </rowConstraints>

        <Label fx:id="numberNameLabel"
               style="-fx-font-weight: bold; -fx-font-size: 18px;"
               GridPane.columnIndex="0"
               GridPane.rowIndex="0"
               GridPane.halignment="CENTER"/>

        <ImageView fx:id="pokemonImageView"
                   fitWidth="200"
                   fitHeight="200"
                   preserveRatio="true"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="1"
                   GridPane.halignment="CENTER"/>

        <!-- GridPane interno para los dos ScrollPanes -->
        <GridPane hgap="15" vgap="10"
                  GridPane.columnIndex="0"
                  GridPane.rowIndex="2"
                  GridPane.halignment="CENTER"
                  GridPane.valignment="CENTER"
                  alignment="CENTER">

            <columnConstraints>
                <ColumnConstraints percentWidth="50" halignment="CENTER"/>
                <ColumnConstraints percentWidth="50" halignment="CENTER"/>
            </columnConstraints>

            <rowConstraints>
                <RowConstraints valignment="CENTER"/>
            </rowConstraints>

            <Label style="-fx-font-weight: bold;"
                   text="Movimientos"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="0"
                   GridPane.halignment="CENTER"/>

            <ScrollPane prefWidth="250"
                        prefHeight="150"
                        GridPane.columnIndex="0"
                        GridPane.rowIndex="1">
                <content>
                    <VBox fx:id="moves" spacing="5" alignment="CENTER_LEFT"/>
                </content>
            </ScrollPane>

            <Label style="-fx-font-weight: bold;"
                   text="Habilidades"
                   GridPane.columnIndex="1"
                   GridPane.rowIndex="0"
                   GridPane.halignment="CENTER"/>

            <ScrollPane prefWidth="250"
                        prefHeight="150"
                        GridPane.columnIndex="1"
                        GridPane.rowIndex="1">
                <content>
                    <VBox fx:id="abilities" spacing="5" alignment="CENTER_LEFT"/>
                </content>
            </ScrollPane>
        </GridPane>
    </GridPane>

</HBox>