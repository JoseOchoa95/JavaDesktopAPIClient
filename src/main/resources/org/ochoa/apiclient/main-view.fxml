    fx:controller="org.ochoa.apiclient.ui.controllers.Controller"
    alignment="CENTER"
    hgap="10"
    vgap="15"
    style="-fx-padding: 20;"
>

    <columnConstraints>
        <ColumnConstraints percentWidth="20" halignment="LEFT"/>
        <ColumnConstraints percentWidth="20" halignment="LEFT"/>
